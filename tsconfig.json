{
  "compilerOptions": {
    "moduleResolution": "Node",
    "baseUrl": "src",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/logging": ["logging.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
